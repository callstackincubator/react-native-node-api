{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@xmldom/xmldom": ["./types/xmldom.d.ts"]
    }
  },
  "include": ["src/node/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["**/*.test.ts"],
  "references": [
    {
      "path": "../weak-node-api/tsconfig.node.json"
    }
  ]
}
