{
  "name": "react-native-node-api-host",
  "version": "0.1.0",
  "description": "Host Node-API addons in your React Native apps!",
  "source": "./src/index.tsx",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-node-api-host-example",
    "typecheck": "tsc",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/callstackincubator/react-native-node-api-modules.git"
  },
  "author": "Mario Pasinski <mario@callstack.com> (https://github.com/callstackincubator)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/callstackincubator/react-native-node-api-modules/issues"
  },
  "homepage": "https://github.com/callstackincubator/react-native-node-api-modules#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@react-native-community/cli": "^15.0.0",
    "@types/react": "^19",
    "del-cli": "^5.1.0",
    "react": "19.0.0",
    "react-native": "0.79.0",
    "react-native-builder-bob": "^0.36.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "0.79.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "esm": true
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNNodeApiHostSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "outputDir": {
      "ios": "ios/generated",
      "android": "android/generated"
    },
    "android": {
      "javaPackageName": "com.nodeapihost"
    }
  },
  "create-react-native-library": {
    "type": "turbo-module",
    "languages": "cpp",
    "version": "0.48.3"
  },
  "dependencies": {
    "node-api-headers": "^1.5.0"
  }
}
